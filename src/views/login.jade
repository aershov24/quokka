extends ./layout.jade

block body
  body(ng-controller='loginController')
    include ./navmenu.jade
    .container
      .row 
        .jumbotron(style='\
        padding-left: 20px;\
        padding-right: 20px;\
        margin-left: 15px;\
        margin-right: 15px;\
        ')
          h1 Quokka. Share your best.
          p
            | Quokka helps you to create, manage and share your 'bests' and 'tops' with the world.
          .row
            .col-sm-12
              a.btn.btn-primary.btn-block(href='/auth/facebook')
                i.fa.fa-facebook
                | Sign in with Facebook
      .row
        .div(data-ng-repeat='list in lists | limitTo: 3')
          .col-sm-6.col-md-4
            .thumbnail
              img.center-block.img-circle.img-thumbnail.img-responsive(src='http://graph.facebook.com/{{list.userId.facebookId}}/picture?width=80&height=80', alt='')
              .caption
                h3 {{list.title}}
                p {{list.description}}
                p
                  a.btn.btn-primary(href='#', role='button') View
                  &nbsp;
                  a.btn.btn-default(href='#', role='button') Share
    include ./footer.jade